<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tx_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembelian Tambahan"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>
        <EditText
            android:id="@+id/edt_nama_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:inputType="text"
            android:singleLine="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Nama Produk"/>
        <EditText
            android:id="@+id/edt_code_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:inputType="text"
            android:hint="Kode Produk"/>
        <EditText
            android:id="@+id/edt_hargad_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:inputType="number"
            android:hint="Harga Awal"/>
        <EditText
            android:id="@+id/edt_hargaj_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:singleLine="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:inputType="number"
            android:hint="Harga Jual"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="40sp"
                android:text="-"/>
            <TextView
                android:id="@+id/tx_jumlah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="40sp"
                android:text="0"/>
            <TextView
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="40sp"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>